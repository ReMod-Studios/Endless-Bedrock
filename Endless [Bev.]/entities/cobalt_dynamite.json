			"endless:post_hit_event": {
				"sequence": [
					{
						"add": {
							"component_groups": [
								"endless:post_hit"
							]
						}
					},
					{
						"run_command": {
							"command": [
                                "tag @s post_hit",
                                "particle endless:cobalt_dynamite_smoke ~ ~ ~"
							]
						}
					}
				]
			},
			"endless:despawn": {
				"add": {
					"component_groups": [
						"endless:despawn"
					]
				}
			}
		}
	}
