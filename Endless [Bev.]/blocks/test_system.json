{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "endless:test_system",
			"properties": {
				"endless:drop_system": [
					true,
					false
				]
			}
		},
		"components": {
			"minecraft:destroy_time": 7.5,
			"minecraft:block_light_emission": 0,
			"minecraft:block_light_absorption": 1,
			"minecraft:map_color": "#F6FABD",
			"minecraft:flammable": {
				"burn_odds": 0,
				"flame_odds": 0
			},
			"minecraft:friction": 0.5,
			"minecraft:explosion_resistance": 2.5,
			"minecraft:loot": "loot_tables/blocks/lunaric_end_stone.json",
			"minecraft:material_instances": {
				"*": {
					"texture": "cobalt_block",
					"render_method": "opaque"
				}
			},
			"minecraft:unit_cube": {},
			"minecraft:on_player_destroyed": {
				"event": "on_break",
				"condition": "!query.equipped_item_any_tag('slot.weapon.mainhand', 'minecraft:is_pickaxe')"
			},
			"tag:rhyolite": {},
			"tag:stone": {}
		},
		"events": {
			"on_break": {
				"sequence": [
                    {
                        "run_command": {
                            "command": [
                                "kill @e[r=1, type=item]"
                            ]
                        }
                    },
					{
						"set_block_property": {
							"endless:drop_system": true
						}
					},
					{
						"die": {
							"target": "self"
						}
					}
				]
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('endless:drop_system')==true",
				"components": {
					"minecraft:loot": "loot_tables/empty.json"
				}
			}
		]
	}
}