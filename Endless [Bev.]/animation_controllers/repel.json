{
    "format_version": "1.10",
	"animation_controllers": {
		"controller.animation.repel.attack": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"attack": "v.attack_time > 0.0"
						}
					]
				},
				"attack": {
					"transitions": [
						{
							"default": "!v.attack_time > 0.0"
						}
					],
					"on_entry": [
                        "@s endless:start_escape"
                    ]
				}
			}
		}
	}
}