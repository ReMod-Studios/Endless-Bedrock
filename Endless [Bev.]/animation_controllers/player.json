{
    "format_version": "1.10",
	"animation_controllers": {
		"controller.animation.player.hold_repel": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{
							"on_hold": "q.get_equipped_item_name(0)=='cobalt_repel'"
						}
					]
				},
				"on_hold": {
					"transitions": [
						{
							"default": "!q.get_equipped_item_name(0)=='cobalt_repel'"
						}
					],
					"on_entry": [
                        "@s endless:on_repel_held"
                    ],
                    "on_exit": [
                        "@s endless:on_repel_not_held"
                    ]
				}
			}
		}
	}
}